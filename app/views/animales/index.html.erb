<!-- Default table -->
            <div class="panel panel-default">
                <div class="panel-heading"><h6 class="panel-title"><i class="icon-table2"></i> Lista Animales</h6></div>
                <div class="table-responsive">
                  <table class="table">
                      <thead>
                          <tr>
                              <th>#</th>
                              <th>Nombre</th>
                              <th>Codigo</th>
                              <th>Fecha de nacimiento</th>
                              <th>Raza</th>
                              <th>Genero</th>
                              <th colspan="3"></th>
                          </tr>
                      </thead>
                      <tbody>
                        <% @animales.each do |animal| %>
                          <tr>
                            <td><%= animal.id %></td>
                            <td><%= animal.nombre %></td>
                            <td><%= animal.codigo %></td>
                            <td><%= animal.fecha_de_nacimiento %></td>
                            <td><%= animal.raza %></td>
                            <td><%= animal.genero %></td>
                            <td><%= link_to 'Show', animal %></td>
                            <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
                            <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
                </div>
          </div>
          <!-- /default table -->



